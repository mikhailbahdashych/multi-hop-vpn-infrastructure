# DigitalOcean API token
do_token = "your-digitalocean-api-token"

# AWS credentials profile from ~/.aws/credentials (default: "default")
aws_profile = "default"

# Default AWS region (used by the default provider)
aws_region = "eu-central-1"

# Path to your SSH public key
ssh_public_key_path = "~/.ssh/id_ed25519.pub"

# --- Example: 2-node chain (DO only) ---
vpn_chain = [
  {
    name     = "entry-fra"
    provider = "digitalocean"
    region   = "fra1"
  },
  {
    name     = "exit-ams"
    provider = "digitalocean"
    region   = "ams3"
  }
]

